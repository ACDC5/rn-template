{
  "name": "rn-template",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "react-native start",
    "test": "jest",
    "build": "cd ./android && ./gradlew assembleRelease",
    "tsc": "tsc -p ./tsconfig.json",
    "eslint": "eslint --ext .ts,.tsx src/",
    "eslint:fix": "eslint --fix --ext .ts,.tsx src/",
    "lint": "prettier --check src/**/*.ts src/**/*.tsx",
    "lint:fix": "prettier --check src/**/*.tsx --write",
    "commit": "git-cz",
    "changelog": "conventional-changelog -p custom-config -i CHANGELOG.md -s -r 0",
    "release": "git add . && node release.js",
    "postrelease": "git push --follow-tags",
    "jetifier": "npx jetifier -r"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-customizable"
    }
  },
  "changelog": {
    "emojis": true,
    "authorName": true,
    "authorEmail": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run tsc && npm run eslint:fix && npm run lint:fix && lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "prettier --check src/**/*.ts src/**/*.tsx",
      "eslint --ext .ts,.tsx src/",
      "git add ."
    ]
  },
  "dependencies": {
    "@ant-design/colors": "^3.2.2",
    "@ant-design/react-native": "^3.2.0",
    "@ice/store": "^0.3.0",
    "@react-native-community/async-storage": "^1.6.2",
    "@react-native-community/netinfo": "^4.4.0",
    "@react-native-community/viewpager": "^2.0.1",
    "axios": "^0.19.0",
    "lodash": "^4.17.15",
    "qs": "^6.9.0",
    "react": "^16.10.2",
    "react-native": "0.59.10",
    "react-native-htmlview": "^0.15.0",
    "react-native-keyboard-aware-scroll-view": "^0.9.1",
    "react-native-linear-gradient": "^2.5.6",
    "react-native-root-toast": "^3.1.2",
    "react-native-splash-screen": "^3.2.0",
    "react-native-swiper": "^1.5.14",
    "react-native-vector-icons": "^6.6.0",
    "react-native-webview": "5.8.1",
    "react-navigation": "2.18.3",
    "react-navigation-backhandler": "^1.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.6.3",
    "@babel/plugin-proposal-class-properties": "^7.5.5",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/plugin-transform-flow-strip-types": "^7.6.3",
    "@babel/runtime": "^7.6.3",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@react-native-community/eslint-config": "0.0.5",
    "@types/echarts": "^4.1.15",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.142",
    "@types/qs": "^6.5.3",
    "@types/react": "^16.9.5",
    "@types/react-native": "^0.60.19",
    "@types/react-native-vector-icons": "^6.4.4",
    "@types/react-navigation": "2.13.10",
    "@types/react-test-renderer": "^16.9.0",
    "@typescript-eslint/eslint-plugin": "^2.3.3",
    "@typescript-eslint/parser": "^2.3.3",
    "babel-jest": "^24.9.0",
    "babel-plugin-import": "^1.12.2",
    "babel-plugin-module-resolver": "^3.2.0",
    "babel-plugin-transform-remove-console": "6.9.4",
    "commitizen": "^4.0.3",
    "conventional-changelog-cli": "^2.0.25",
    "conventional-changelog-custom-config": "^0.2.0",
    "cz-customizable": "^6.2.0",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.4.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.1.2",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "jetifier": "^1.6.4",
    "lint-staged": "^9.4.2",
    "metro-react-native-babel-preset": "^0.56.0",
    "prettier": "^1.18.2",
    "react-test-renderer": "^16.10.2",
    "standard-version": "^7.0.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "preset": "react-native"
  }
}
